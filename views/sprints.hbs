{{#> index title="overview"}}
    {{#*inline "content-block"}}
<div class="row" id="inc"style="padding-top: 10px; background-color: gray; font-family: Segoe UI,Helvetica Neue,Helvetica,Arial,Verdana">
    <div  class="col-md-8 col-md-offset-2 col-xs-10 col-xs-offset-1" style="margin-bottom:20px; margin-top:20px; border: 5px solid black;padding: 10px 10px 10px 10px; background-color: #f1f1f1;">
        <h3>Sprints for project: {{projectTitle}}     </h3>
          {{#each Sprints}}
            <div style="width:100%; margin-bottom: 10px">
                <h6>{{SprintN}}</h6>
            </div>
          {{/each}}
        <h4 style="margin-top:20px">Add Sprint</h4>
        <div style="font-size:15px">
            <form method="POST" action="/sprints">
                <div class="form-group">
                    <label for="SprintN">Sprint Number:</label>
                    <input class="form-control" id="SprintN" type="text" placeholder="Sprint Number" name="SprintN"/>
                </div>
                <div class="form-group">
                    <label for="Description">Description: </label>
                    <input class="form-control" id="Description" type="text" placeholder="Description" name="Description"/>
                </div>
                <button class="btn btn-primary" type="submit" style="display:flex">Add Sprint</button>
            </form>
        </div>
    </div>
</div>
<script>
    window.onload = function (e) {
        document.getElementById("inc").style.height = window.innerHeight + "px"
    }
</script>
{{/inline}}
{{/index}}