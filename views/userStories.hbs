{{#> index title="overview"}}
    {{#*inline "content-block"}}
<div class="row" style="padding-top: 10px; background-color: gray; font-family: Segoe UI,Helvetica Neue,Helvetica,Arial,Verdana">
    <div class="col-md-10 col-md-offset-1 col-xs-12" style="background-color: #f1f1f1; border: 5px solid black; margin-top:20px; padding: 10px 10px 10px 10px;" >
        <h3>User Stories for project: {{projectTitle}} </h3>
           {{#each UserStories}}
            <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12" id="USDetails">
                <div class="col-xs-12" style="{{#if isBug}} border: solid 3px rgb(204, 41, 61); margin-bottom: 10px; {{else}} border: solid 3px #009ccc; margin-bottom: 10px; {{/if}}"><b>US ID:</b>
                    <p>Title: {{Title}} </p>
                    <p>Description: {{Description}}</p>
                    <p>Author: {{AuthorTag}}</p>
                    <p>Sprint: {{Sprint}} </p>
                    <p>Story Points: {{StoryPoints}}</p>
                    <p>Release: {{Release}}</p>
                </div>
            </div>
           {{/each}}
    </div>
</div>
<div class="row" style="padding-top: 10px; padding-bottom: 10px; background:gray"></div>
<div class="row" style="background-color: gray;     padding-bottom: 40px">
    <div class="col-md-10 col-md-offset-1 col-xs-12" style="font-size:15px;  border: 5px solid black;   margin-bottom: 20px;  background-color: rgb(241, 241, 241)">
        <h4 class="col-xs-offset-1" style="height:100%">Add User Stories     </h4>
        <form method="POST" action="/userStories">
            <div class="form-group">
                <label for="USID">User Story ID:</label>
                <input class="form-control" id="USID" type="text" placeholder="User Story ID" name="USID"/>
            </div>
            <div class="form-group">
                <label for="Description">Description: </label>
                <input class="form-control" id="Description" type="text" placeholder="Description" name="Description"/>
            </div>
            <div class="form-group">
                <label for="Title">Title:</label>
                <input class="form-control" id="Title" type="text" placeholder="Title" name="Title"/>
            </div>
            <div class="form-group">
                <label for="US" style="margin-left:20%">User Story</label>
                <input type="radio" id="US" name="USorBug" value="1" checked="checked"/>
                <label for="Bug" style="margin-left:28%">Bug</label>
                <input type="radio" id="Bug" name="USorBug" value="0"/>
            </div>
            <div class="form-group">
                <label for="Estimated">Estimated hours:</label>
                <input class="form-control" id="Estimated" type="text" placeholder="Estimated hours" name="Estimated"/>
            </div>
            <div class="form-group">
                <label for="Release">Release:</label>
                <input class="form-control" id="Release" type="text" placeholder="Release" name="Release"/>
            </div>
            <div class="form-group">
                <label for="StoryPoints">Story Points:</label>
                <input class="form-control" id="StoryPoints" type="text" placeholder="Story Points" name="StoryPoints"/>
            </div>
            <div class="form-group">
                <label for="SprintN">Sprint: </label>
                <select name="SprintN">
                   {{#each Sprints}}
                       <option value="{{_id}}"> {{SprintN}} </option>
                   {{/each}}
                </select>
            </div>
            <button class="btn btn-primary" type="submit">Add User Story</button>
        </form>
    </div>
</div>
{{/inline}}
{{/index}}